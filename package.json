{
  "name": "fantasy-football-analyzer",
  "version": "1.0.0",
  "description": "Advanced Fantasy Football Draft Tool with AI Analysis",
  "main": "src/index.tsx",
  "scripts": {
    "dev": "vite",
    "build": "tsc --project tsconfig.prod.json --noEmit && vite build",
    "build:prod": "vite build --mode production",
    "build:ci": "vite build --mode production --logLevel warn",
    "preview": "vite preview",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 50",
    "lint:fix": "eslint src --ext ts,tsx --fix",
    "typecheck": "tsc --noEmit",
    "typecheck:prod": "tsc --project tsconfig.prod.json --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:ci": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:e2e:install": "playwright install",
    "test:e2e:install-deps": "playwright install-deps",
    "test:e2e:codegen": "playwright codegen",
    "test:e2e:ci": "playwright test --reporter=github",
    "test:e2e:mobile": "playwright test --project=mobile-chrome --project=mobile-safari",
    "test:e2e:desktop": "playwright test --project=chromium-desktop --project=firefox-desktop --project=webkit-desktop",
    "test:e2e:api": "playwright test --project=api-tests",
    "test:e2e:performance": "playwright test --project=performance-chrome",
    "test:e2e:visual": "playwright test --project=visual-regression",
    "test:e2e:accessibility": "playwright test --project=accessibility",
    "test:e2e:update-snapshots": "playwright test --update-snapshots",
    "test:all": "npm run test:ci && npm run test:e2e:ci",
    "test:quick": "npm run test && npm run test:e2e --grep @smoke",
    "analyze": "npx vite-bundle-analyzer",
    "clean": "rm -rf dist node_modules/.vite test-results",
    "clean:cache": "rm -rf node_modules/.cache .eslintcache",
    "clean:all": "npm run clean && npm run clean:cache && rm -rf node_modules",
    "deploy:preview": "npm run build:prod && npm run preview",
    "validate": "npm run typecheck && npm run lint && npm run test:ci",
    "validate:full": "npm run validate && npm run test:e2e:ci"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@playwright/test": "^1.55.0",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^2.8.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.8.2",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitejs/plugin-react": "^4.1.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.53.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "playwright-core": "^1.55.0",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.2.2",
    "vite": "^5.0.0",
    "vite-bundle-analyzer": "^0.7.0",
    "vitest": "^0.34.6"
  },
  "type": "module",
  "keywords": [
    "fantasy-football",
    "react",
    "typescript",
    "draft-analyzer",
    "sports-analytics"
  ],
  "author": "Fantasy Football Analyzer Team",
  "license": "MIT"
}
