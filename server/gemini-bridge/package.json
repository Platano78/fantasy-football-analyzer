{
  "name": "gemini-advanced-bridge-server",
  "version": "1.0.0",
  "description": "Local Gemini Advanced MCP Bridge Server for Fantasy Football Analyzer",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint *.js",
    "lint:fix": "eslint *.js --fix",
    "health-check": "curl -f http://localhost:3001/health || exit 1",
    "docker:build": "docker build -t gemini-bridge .",
    "docker:run": "docker run -p 3001:3001 gemini-bridge",
    "pm2:start": "pm2 start server.js --name gemini-bridge",
    "pm2:stop": "pm2 stop gemini-bridge",
    "pm2:restart": "pm2 restart gemini-bridge",
    "pm2:logs": "pm2 logs gemini-bridge"
  },
  "dependencies": {
    "express": "^4.18.2",
    "ws": "^8.14.2",
    "cors": "^2.8.5",
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "compression": "^1.7.4",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "eslint": "^8.56.0",
    "eslint-config-node": "^4.1.0",
    "supertest": "^6.3.3",
    "ws": "^8.14.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "fantasy-football",
    "gemini-mcp",
    "websocket",
    "express",
    "bridge-server",
    "ai-coaching",
    "nfl-analytics"
  ],
  "author": "Fantasy Football Analyzer Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/fantasy-football-analyzer"
  },
  "bugs": {
    "url": "https://github.com/your-org/fantasy-football-analyzer/issues"
  },
  "homepage": "https://github.com/your-org/fantasy-football-analyzer#readme",
  "nodemonConfig": {
    "watch": [
      "*.js",
      "config/*.js"
    ],
    "ignore": [
      "node_modules/",
      "logs/",
      "coverage/"
    ],
    "ext": "js,json",
    "delay": 1000
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "*.js",
      "!node_modules/**"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "node"
    ],
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "env": {
      "node": true,
      "es6": true,
      "jest": true
    },
    "rules": {
      "no-console": "off",
      "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
      "prefer-const": "error",
      "no-var": "error"
    }
  }
}